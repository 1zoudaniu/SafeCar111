<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="#3F51B5"
    android:elevation="0dp"
    android:orientation="vertical"
    android:translationY="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="#3F51B5"
        android:elevation="0dp"
        android:translationY="0dp">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/tttt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height">


            <TextView
                android:id="@+id/header_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3F51B5" />

            <safecar.yiye.apackage.com.safecar.Widget.DotCircularRingView
                android:id="@+id/circleView"
                android:layout_width="@dimen/header_logo_size"
                android:layout_height="@dimen/header_logo_size"
                android:layout_centerInParent="true"
                android:layout_gravity="center"

                custom:diameter="200dp"
                custom:highlightColor="#FFFFFF"
                custom:progress="20" />

            <TextView
                android:id="@+id/header_refresh_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:text="车队评分"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/header_refresh_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="50"
                android:textColor="#fff"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/header_refresh_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="183dp"
                android:text="中  等"
                android:textColor="#fff"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/header_refresh_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/circleView"
                android:layout_marginBottom="10dp"
                android:background="@color/transparent"
                android:layout_centerHorizontal="true">

                <Button
                    android:id="@+id/header_refresh_history"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:background="@color/transparent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"
                    android:text="历史评分"/>

                <Button
                    android:id="@+id/header_refresh_rule"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:background="@color/transparent"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:text="评分规则"/>

            </RelativeLayout>

        </RelativeLayout>
    </FrameLayout>
</LinearLayout>