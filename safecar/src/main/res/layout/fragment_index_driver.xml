<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.xiaochao.lcrapiddeveloplibrary.viewtype.ProgressActivity
        android:id="@+id/home_recommend_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.xiaochao.lcrapiddeveloplibrary.widget.SpringView
                android:id="@+id/home_recommend_springview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.twotoasters.jazzylistview.JazzyListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:translationY="0dp">

                </com.twotoasters.jazzylistview.JazzyListView>

            </com.xiaochao.lcrapiddeveloplibrary.widget.SpringView>
        </LinearLayout>
        <!--</safecar.yiye.apackage.com.safecar.Widget.MyScrollview>-->


    </com.xiaochao.lcrapiddeveloplibrary.viewtype.ProgressActivity>
</LinearLayout>

