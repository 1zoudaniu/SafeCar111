<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="safecar.yiye.apackage.com.safecar.MVP.Home.Fragment.HomeHomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/head_color"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    >

                    <ImageView
                        android:id="@+id/fragment_index_menu"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:paddingRight="30dp"
                        android:src="@drawable/menu"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:background="@color/head_color"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/fragment_index_carname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/fragment_index_carnumb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="20sp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/fragment_index_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="10dp"
                    />
            </RelativeLayout>

            <com.xiaochao.lcrapiddeveloplibrary.viewtype.ProgressActivity
                android:id="@+id/home_recommend_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <com.xiaochao.lcrapiddeveloplibrary.widget.SpringView
                android:id="@+id/home_recommend_springview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.twotoasters.jazzylistview.JazzyListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:divider="#00000000"
                    android:translationY="0dp">

                </com.twotoasters.jazzylistview.JazzyListView>

            </com.xiaochao.lcrapiddeveloplibrary.widget.SpringView>

            </com.xiaochao.lcrapiddeveloplibrary.viewtype.ProgressActivity>

        </LinearLayout>

</LinearLayout>
