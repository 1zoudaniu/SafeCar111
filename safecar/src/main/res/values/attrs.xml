<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="DotCircularRingView">
        <attr name="highlightColor" format="color|reference" />
        <attr name="progress" format="integer" />
        <attr name="diameter" format="dimension|reference" />
    </declare-styleable>

    <!-- 参考Seekbar -->
    <declare-styleable name="windows">

        <!-- 背景颜色 -->
        <attr name="background2" format="color" />
        <!-- 进度颜色 -->
        <attr name="progressDrawable" format="color" />
        <!-- 宽度 -->
        <attr name="layout_width" format="dimension" />
        <!-- 字体颜色 -->
        <attr name="textColor" format="color" />
        <!-- 字体大小 -->
        <attr name="textSize" format="dimension" />
        <!-- 最大进度 -->
        <attr name="max" format="integer" />
        <!-- 进度 -->
        <attr name="progress2" format="integer" />
        <!-- 进度点 -->
        <attr name="thumb" format="reference" />
        <!-- 进度点宽高 -->
        <attr name="thumbSize" format="integer" />
    </declare-styleable>




    <declare-styleable name="CircleDotProgressBar">
        <attr name="progressMax" format="integer" />
        <!--完成进度点的颜色-->
        <attr name="dotColor" format="color" />
        <!--未完成进度点的颜色-->
        <attr name="dotBgColor" format="color" />

        <!--显示模式-->
        <attr name="showMode" >
            <!--空-->
            <enum name="NULL" value="0" />
            <!--只有百分比和单位-->
            <enum name="PERCENT" value="1" />
            <!--全显，包括百分比和单位、按钮-->
            <enum name="ALL" value="2" />
        </attr>

        <!--显示的百分比-->
        <attr name="percentTextSize" format="dimension" />
        <attr name="percentTextColor" format="color" />
        <!--百分比使用系统字体，默认为false(使用外部导入字体assets/fonts/HelveticaNeueLTPro.ttf)-->
        <attr name="isPercentFontSystem" format="boolean" />
        <!--百分比瘦身大小-->
        <attr name="percentThinPadding" format="integer" />

        <!--百分比单位-->
        <attr name="unitText" format="string" />
        <attr name="unitTextSize" format="dimension" />
        <attr name="unitTextColor" format="color" />
        <!--单位与百分比的底部对齐方式-->
        <attr name="unitTextAlignMode">
            <!--默认对齐-->
            <enum name="DEFAULT" value="0" />
            <!--中文对齐-->
            <enum name="CN" value="1" />
            <!--英文对齐：主要针对底部长的字母或字符，如：g、j、p、q、y、$、@等，其他几乎字母或字符都可以使用默认对齐-->
            <enum name="EN" value="2" />
        </attr>

        <!--按钮-->
        <attr name="buttonText" format="string" />
        <attr name="buttonTextSize" format="dimension" />
        <attr name="buttonTextColor" format="color" />
        <attr name="buttonBgColor" format="color" />
        <attr name="buttonClickColor" format="color" />
        <attr name="buttonClickBgColor" format="color" />
        <attr name="buttonTopOffset" format="dimension" />


    </declare-styleable>

    <declare-styleable name="TabWidget">
        <attr name="bottom_labels" format="reference" />
    </declare-styleable>

    <declare-styleable name="PullScrollView">
        <attr name="header" format="reference" />
        <attr name="headerHeight" format="dimension" />
        <attr name="headerVisibleHeight" format="dimension" />
    </declare-styleable>

</resources>