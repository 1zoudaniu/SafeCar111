<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:id="@+id/loadingStateRelativeLayout"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ProgressBar
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/progress1"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress_gear_fu" />

        <ProgressBar
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/progress2"
            android:layout_marginRight="30dp"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress_gear_fu"
            android:layout_toLeftOf="@+id/progress1" />

        <ProgressBar
            android:id="@+id/progress3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:indeterminateDrawable="@drawable/progress_gear_fu"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ProgressBar
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/loadingStateProgressBar"
            android:indeterminateDrawable="@drawable/progress_gear_fu"
            android:layout_below="@+id/progress1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <ProgressBar
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/progress4"
            android:indeterminateDrawable="@drawable/progress_gear"
            android:layout_alignTop="@+id/progress2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />
    </RelativeLayout>
</RelativeLayout>